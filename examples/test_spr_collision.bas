INCLUDE "../lib_spr.bas"
INCLUDE "../lib_joy.bas"
INCLUDE "../lib_types.bas"
INCLUDE "../lib_random.bas"

RANDOMIZE TI()

CALL SprInit()
CALL SpriteInit()
CALL SprImportShape(@SPRITE_BLOCK, 255)

FOR t AS BYTE = 0 TO 15
    CALL SprColor(t, t AND 3)
    CALL SprFrame(t, 255)
    CALL SprXY(t, random_word(0, 320-48), random(0, 200-42))
    CALL SprEnable(t, TRUE)
NEXT t

DIM x AS INT
    x = (320-24) / 2
DIM y AS INT
    y = (200-21) / 2

CALL scr_clear()

game_loop:
    IF joy1_up() THEN 
        y = y - 1
    END IF
    IF joy1_down() THEN 
        y = y + 1
    END IF
    IF joy1_right() THEN 
        x = x + 1
    END IF
    IF joy1_left() THEN 
        x = x - 1
    END IF
    
    CALL SprXY(0, x, y)

    LOCATE 0,0
    PRINT x;"    "
    PRINT y;"    "

    CALL SprRecordCollisions(0)
    FOR t AS BYTE = 0 TO 15
        IF SprCollision(t) THEN
            CALL SprXY(t, random_word(0, 320-48), random(0, 200-42))
        END IF
    NEXT t

    CALL SpriteUpdate()
    GOTO game_loop

